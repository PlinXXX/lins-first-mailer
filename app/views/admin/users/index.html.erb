<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page -->
<div id="main">

	<h1>INDEX USER</h1>
	<p>
		Tu es dans app/views/admin/users/index.html.erb <br>
	</p>
	<div>
		<%= 	link_to "New", new_admin_user_path %>
	</div>

	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th scope="col">User</th>
	      <th scope="col">Show</th>
	      <th scope="col">Edit</th>
	      <th scope="col">Delete</th>
	    </tr>
	  </thead>

	  <tbody>
	    
	    <% @all_users.each do |user| %>
	      <tr class="table-dark">
	        <td><%= user.email %></td>
	        <td class="btn btn-primary"><%= link_to "MORE", admin_user_path(user.id) %></td>

	        <td><%= link_to "EDIT", edit_admin_user_path(user.id) %></td>
	        <% unless user.is_admin %>
	        <td><%= button_to "DELETE", admin_user_path(user.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
	        <%else%>
	        <td>==You Can't Delete your account here==</td>
	        <%end%>
	      </tr>
	    <% end %>

	  </tbody>
	</table> 

</div> 

