<div class="jumbotron">
  <h1 class="display-3">Your profile</h1>
  <ul class="nav nav-tabs">
      <li class="nav-item">
        <%=@current_user.first_name%>
      </li>
    </ul>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%=@current_user.last_name%>
      </li>
    </ul>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%=@current_user.email%>
      </li>
    </ul>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%=@current_user.description%>
      </li>
    </ul>

    <% if !@current_user.created_events.empty? %>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <h3>Created events</h3>
          <div class="container">
            <div class="row">
          <%@current_user.created_events.each do |event|%>
              <div class="col-sm"> 
                <%= event.title %><br>
                <%= event.description %><br>
              </div>
          <%end%>
            </div>
          </div>
        </li>
      </ul>
    <%else%>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <strong>You haven't yet created any event</strong>
        </li>
      </ul>
    <%end%>

    <% if !@current_user.attendances.empty? %>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <h3>Interesting events</h3>
          <div class="container">
            <div class="row">
          <%@current_user.attendances.each do |attendance|%>
              <div class="col-sm"> 
                <%= attendance.event.title %><br>
                <%= attendance.event.description %><br>
              </div>
          <%end%>
            </div>
          </div>
        </li>
      </ul>
    <%end%>
    
    <div style="float: right;">
      <span class="badge badge-info">
        <%= link_to "Edit profile", edit_user_path %></span>
    </div>
    
</div>
    


